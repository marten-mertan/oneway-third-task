        <script src="scripts/vendor/vue/vue.min.js"></script>
        <script src="scripts/vendor/jquery/jquery-3.4.1.min.js"></script>
        <script src="scripts/vendor/slick/slick.min.js"></script>
        <script src="scripts/vendor/magnific-popup/magnific-popup.min.js"></script>
        <script src="scripts/bundle.js"></script>
        <script src="scripts/api.js"></script>
    </body>
</html>